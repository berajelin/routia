    <!-- SCRIPTS -->
    <script>
        // Stripe Configuration
        const stripe = Stripe('pk_test_YOUR_STRIPE_PUBLIC_KEY');

        // Chatbot functions
        function toggleChatbot() {
            const window = document.getElementById('chatbot-window');
            window.classList.toggle('active');
        }

        function sendMessage() {
            const input = document.getElementById('chatbot-input');
            const messages = document.getElementById('chatbot-messages');
            const text = input.value.trim();

            if (text) {
                // Add user message
                messages.innerHTML += `<div class="chatbot-message user">${text}</div>`;
                input.value = '';

                // Simulate bot response
                setTimeout(() => {
                    const responses = [
                        "¡Gracias por tu mensaje! Un agente te contactará pronto.",
                        "Puedes empezar gratis haciendo clic en 'Empezar Gratis'.",
                        "Nuestros planes empiezan desde 2,000€/mes.",
                        "La demo interactiva está disponible en la sección 'Demo'.",
                        "¿Te gustaría agendar una llamada con nuestro equipo?"
                    ];
                    const randomResponse = responses[Math.floor(Math.random() * responses.length)];
                    messages.innerHTML += `<div class="chatbot-message bot">${randomResponse}</div>`;
                    messages.scrollTop = messages.scrollHeight;
                }, 1000);

                messages.scrollTop = messages.scrollHeight;
            }
        }

        // Demo prediction
        function generateDemoPrediction() {
            const results = document.getElementById('demo-results');
            results.classList.add('active');

            // Animate numbers
            const stats = results.querySelectorAll('.demo-chart + div > div > div:first-child');
            stats.forEach(stat => {
                const finalValue = stat.textContent;
                stat.textContent = '---';
                setTimeout(() => {
                    stat.textContent = finalValue;
                }, 500);
            });
        }

        // Stripe Checkout
        function startCheckout(plan) {
            // In production, this would call your backend to create a Stripe session
            alert(`Redirigiendo a Stripe para el plan ${plan}...

En producción, esto crearía una sesión de Stripe Checkout.`);
        }

        function startFreeTrial() {
            alert('¡Bienvenido!

En producción, esto iniciaría el proceso de registro gratuito.');
        }

        function scheduleDemo() {
            alert('Agendando demo...

En producción, esto abriría un calendario para seleccionar fecha y hora.');
        }

        function scheduleEnterpriseCall() {
            alert('Agendando llamada con equipo Enterprise...

En producción, esto abriría un formulario para agendar videollamada.');
        }

        // Navbar scroll effect
        window.addEventListener('scroll', () => {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });

        // Open chatbot after 5 seconds
        setTimeout(() => {
            const window = document.getElementById('chatbot-window');
            if (!window.classList.contains('active')) {
                // Pulse animation on button
                const button = document.querySelector('.chatbot-button');
                button.style.animation = 'pulse 1s 3';
            }
        }, 5000);
    </script>
